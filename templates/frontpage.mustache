    <script>
     document.addEventListener('DOMContentLoaded', function () {
    const swiper = new Swiper('.easy-laws-testimonial-slider', {
        loop: true,
        spaceBetween: 30,
        autoplay: {
            delay: 5000, 
            disableOnInteraction: false 
        },
        breakpoints: {
            320: {
                slidesPerView: 1,
                spaceBetween: 20
            },
            768: {
                slidesPerView: 2,
                spaceBetween: 30
            },
            992: {
                slidesPerView: 3,
                spaceBetween: 30
            }
        }
    });

    const accordion = document.querySelector('.js-accordion');
    if (!accordion) return;

    const items = accordion.querySelectorAll('.js-accordion-item');

    const openFirstItem = () => {
        const firstItem = items[0];
        const firstButton = firstItem.querySelector('.js-accordion-button');
        const firstContent = firstItem.querySelector('.js-accordion-content');
        if (firstButton && firstContent) {
            firstButton.setAttribute('aria-expanded', 'true');
            firstContent.style.maxHeight = firstContent.scrollHeight + 'px';
        }
    };

    openFirstItem();

    accordion.addEventListener('click', function (event) {
        const button = event.target.closest('.js-accordion-button');
        if (!button) return;

        const currentItem = button.closest('.js-accordion-item');
        const content = currentItem.querySelector('.js-accordion-content');
        const isExpanded = button.getAttribute('aria-expanded') === 'true';

        items.forEach(item => {
            const otherButton = item.querySelector('.js-accordion-button');
            const otherContent = item.querySelector('.js-accordion-content');
            if (item !== currentItem) {
                otherButton.setAttribute('aria-expanded', 'false');
                otherContent.style.maxHeight = 0;
            }
        });

        if (isExpanded) {
            button.setAttribute('aria-expanded', 'false');
            content.style.maxHeight = 0;
        } else {
            button.setAttribute('aria-expanded', 'true');
            content.style.maxHeight = content.scrollHeight + 'px';
        }
    });
});

    </script>